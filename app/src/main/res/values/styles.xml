<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="TextField.White" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextField.Rating" parent="TextField.White">
        <item name="android:background">@drawable/background_chip</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:drawableStart">@drawable/ic_star</item>
        <item name="android:drawablePadding">@dimen/padding_popular_movie_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_chip</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_chip</item>
        <item name="android:paddingTop">@dimen/padding_vertical_chip</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_chip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
