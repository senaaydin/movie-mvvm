<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="TextField.White" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextField.Rating" parent="TextField.White">
        <item name="android:background">@drawable/background_chip</item>
        <item name="android:drawableStart">@drawable/ic_star</item>
        <item name="android:drawablePadding">@dimen/padding_popular_movie_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_vertical_chip</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_chip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextField" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextField.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextField.Body2">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextField.ShowDetail">
        <item name="android:layout_marginStart">@dimen/margin_xxl</item>
        <item name="android:layout_marginEnd">@dimen/margin_xxl</item>
    </style>

    <style name="TextField.ShowDetail.Time">
        <item name="android:textAppearance">@style/TextField.Body2</item>
        <item name="android:textColor">@color/almost_black_60</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="TextField.ShowDetail.Overview">
        <item name="android:textAppearance">@style/TextField.Body1</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>
    <style name="TextField.ListItem" />
    <style name="TextField.ListItem.PopularMovie">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/margin_popular_movie_text</item>
    </style>


    <style name="TextField.ListItem.PopularMovie.Genre">
        <item name="android:textAppearance">@style/TextField.Body2</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_small</item>
    </style>

</resources>
